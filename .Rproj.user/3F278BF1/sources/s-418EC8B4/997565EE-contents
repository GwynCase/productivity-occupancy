ggplot() +
  geom_sf(data=n.america, fill='lightgrey') +
  geom_sf(data=rivers) +
  coord_sf(xlim=c(st_bbox(squirrel.box)[1] - 1.5, st_bbox(squirrel.box)[3] + 1.5), 
           ylim=c(st_bbox(squirrel.box)[2] - 0.25, st_bbox(squirrel.box)[4] + 0.25)) +
